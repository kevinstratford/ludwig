##############################################################################
#
#  Colloid smoke test
#
#  Two colloids of different size with buoyancy
#
##############################################################################

N_cycles 10

##############################################################################
#
#  System
#
##############################################################################

size 32_32_32

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.1

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        input_two

colloid_one_a0      2.3
colloid_one_ah      2.3
colloid_one_r       1.0_1.0_1.0

colloid_two_a0      4.77
colloid_two_ah      4.77
colloid_two_r       16.2_16.2_16.2

colloid_buoyancy    0.0_0.0_-0.0001

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end   no

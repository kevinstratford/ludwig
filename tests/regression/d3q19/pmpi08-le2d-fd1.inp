##############################################################################
#
#  Lees Edwards + symmetric 2d smoke test
#  Longer run of serial-le2d-fd1.inp to test periodic wrapping of LE.
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 2600

##############################################################################
#
#  System
#
##############################################################################

size 64_64_1
grid 2_4_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.1
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric

A -0.0625
B 0.0625
K 0.04

phi0 0.0
phi_initialisation    spinodal
mobility 0.15

fd_gradient_calculation 3d_27pt_fluid
fd_advection_scheme_order 3

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 2600
config_at_end no

###############################################################################
#
#  Lees-Edwards planes
#
###############################################################################

N_LE_plane 2
LE_plane_vel 0.05
LE_init_profile 1

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed -7361237


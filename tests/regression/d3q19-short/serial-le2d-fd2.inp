##############################################################################
#
#  Lees Edwards + Brazovskii 2d smoke test
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 200

##############################################################################
#
#  System
#
##############################################################################

size 64_64_1
grid 2_4_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.0833333333
temperature 0.00002133333

ghost_modes off
force 0.0_0.00_0.0

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy brazovskii

A -0.0005
B 0.0005
K -0.0006
C 0.00076

noise 1.0
phi0 0.0
phi_initialisation    spinodal
mobility 0.250

fd_advection_scheme_order 5
fd_gradient_calculation 2d_5pt_fluid

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 200
config_at_end no

###############################################################################
#
#  Lees-Edwards planes
#
#  These parameters set up a number of equally spaced planes
#  with constant velocity.
#
#  N_LE_plane       the number of planes
#  LE_plane_vel     the y-component of the plane velocity
#  LE_init_profile  set the initial velocity profile to be consistent with
#                   desired shear rate. (Only valid at t = 0). [0|1]
#
###############################################################################

N_LE_plane 2
LE_plane_vel 0.0064
LE_init_profile 0

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed      13

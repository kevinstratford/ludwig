##############################################################################
#
#  Cholesteric smoke test
#  LE planes 7pt 3d fluid stencil advection order 4
#
##############################################################################

N_start  0
N_cycles 10

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 32_32_32
periodicity 1_1_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.01
viscosity_bulk 0.1

isothermal_fluctuations off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy lc_blue_phase

fd_advection_scheme_order 4
fd_gradient_calculation 3d_7pt_fluid

###############################################################################
#
#  Blue Phase free energy
#
###############################################################################

lc_a0      0.01
lc_gamma   3.085714286
lc_q0      0.09817477
lc_kappa0  0.018971957
lc_kappa1  0.018971957
lc_xi      0.0

lc_Gamma   0.5

lc_q_init_amplitude 0.3
lc_q_initialisation twist
lc_init_redshift 1.0
lc_redshift_update 0

lc_anchoring_method two

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        none

###############################################################################
#
#  Walls / boundaries
#
###############################################################################

boundary_walls 0_0_0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end no

###############################################################################
#
#  Lees-Edwards planes
#
###############################################################################

N_LE_plane 2
LE_plane_vel 0.05
LE_init_profile 1

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235

##############################################################################
#
#  Lees Edwards + symmetric_lb 2d smoke test
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 200

##############################################################################
#
#  System
#
##############################################################################

size 64_64_1
grid 2_4_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.1
temperature 0.00002133333

ghost_modes off
force 0.0_0.00_0.0

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric_lb

A -0.0625
B 0.0625
K 0.04

phi0 0.0
phi_initialisation    spinodal
mobility 0.45

fd_gradient_calculation 3d_27pt_fluid

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 200
config_at_end no

###############################################################################
#
#  Lees-Edwards planes
#
###############################################################################

N_LE_plane 2
LE_plane_vel 0.05
LE_init_profile 1

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed      13

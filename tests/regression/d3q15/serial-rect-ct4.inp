#############################################################################
#
#  serial-rect-ct4.inp
#
#  Rectangular capillary.
#
#  As for serial-rect-ct3.inp, but tube in (x-y) to test isotropy.
#
##############################################################################

N_cycles 100
N_start 0

##############################################################################
#
#  System and MPI
#
##############################################################################

size 31_15_1
grid 1_1_1
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

force 0.0_0_0.00001
viscosity 0.1666
isothermal_fluctuations off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity       0_0_1
boundary_walls    1_1_0

boundary_walls_slip_active        yes
boundary_walls_slip_fraction_top  1.0_1.0_0.0
boundary_walls_slip_fraction_bot  0.0_0.0_0.0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics           100
stats_vel_print_vol_flux  yes

config_at_end no
